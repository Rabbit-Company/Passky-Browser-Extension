{
  "name": "Passky",
  "description": "Simple and secure password manager",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "46",
  "author": "Rabbit Company LLC",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/logo.png",
      "32": "/images/logo.png",
      "48": "/images/logo.png",
      "128": "/images/logo.png"
    }
  },
  "icons": {
    "16": "/images/logo.png",
    "32": "/images/logo.png",
    "48": "/images/logo.png",
    "128": "/images/logo.png"
  }
}
